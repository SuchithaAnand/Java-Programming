public class NumberPattern {
    public static void main(String[] args) {
        printNumberPattern(4);
    }
    private static void printNumberPattern(int rows) {
        for (int i = 1; i <= rows; i++) {
            System.out.print(i + "  ");
            for (int j = 1; j < i; j++) {
                System.out.print(i + "  ");
            }
            System.out.println();
        }
    }
}
